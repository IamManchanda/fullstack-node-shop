extends ../layouts/main.pug

block content
  if hasProducts
    h2.text-center My Products
    .grid-x.grid-margin-x
      each currentProduct in products.reverse()
        .cell.small-6.medium-4.large-3
          .radius.bordered.shadow.card
            img(src=`https://placeimg.com/500/300/${convertToKebabCase(currentProduct.title)}`)
            .card-divider
              h5
                strong $99.99
            .card-section
              h3 #{ currentProduct.title }
              p It has an easy to override visual style, and is appropriately subdued.
              button.primary.radius.bordered.shadow.button Add to Cart
  else
    h2.text-center No Products Found