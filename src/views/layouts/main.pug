doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.5.3/css/foundation-prototype.min.css')
    link(rel="stylesheet", href="/assets/css/styles.css")
    title #{ documentTitle }
  body
    //- Header
    header
      .top-bar
        .top-bar-left
          ul.menu
            li.menu-text 
              | Best Shop
            li(class=(path === '/' ? 'is-active' : ''))
              a(href='/' class='radius')
                | Home
            li(class=(path === '/products' ? 'is-active' : ''))
              a(href='/products' class='radius')
                | All Products
        .top-bar-right
          ul.menu
            li(class=(path === '/admin/add-product' ? 'is-active' : ''))
              a(href='/admin/add-product' class='radius') 
                | Add Product
            li(class=(path === '/admin/products' ? 'is-active' : ''))
              a(href='/admin/products' class='radius')
                | My Products
            li(class=(path === '/cart' ? 'is-active' : ''))
              a(href='/cart' class='radius')
                | My Cart
            li(class=(path === '/orders' ? 'is-active' : ''))
              a(href='/orders' class='radius')
                | My Orders
    //- Body
    .grid-container.fluid
      .grid-x.grid-padding-x.grid-padding-y
        .cell
          main
            block content
